<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget" parent="@android:style/Widget"/>
    <style name="Widget.Button" parent="@android:style/Widget.Button"/>
    <style name="Widget.Button.Transparent">
        <item name="android:background">@null</item>
        <!-- La interrogacion hace que coja el "contenido de.." ese atributo.-->
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@android:color/white</item>
        <!-- Hay peligro al hacer esto por lo de medir, dimensionar y dibujar, pero ahora mismo no hay problema
        lo ha aplicado lourdes, por algun motivo no hay problema-->
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Widget.ActionMode">
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
